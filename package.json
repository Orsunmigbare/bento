{
  "name": "@staccx/bento",
  "private": true,
  "scripts": {
    "precommit": "lerna run --concurrency 1 --stream precommit --since HEAD",
    "postcommit": "git update-index --again",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "styleguide": "cd packages/base && styleguidist server",
    "start": "cd packages/internal/styleguide && yarn start",
    "soy": "node packages/internal/soy",
    "release": "lerna publish --no-verify-access --no-verify-registry --conventional-commits",
    "clean": "rm -rf node_modules && rm yarn.lock && lerna clean --yes && lerna bootstrap && lerna run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/stacc-flow/bento.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "homepage": "https://bitbucket.org/stacc-flow/bento#readme",
  "description": "",
  "workspaces": [
    "packages/**"
  ],
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "babel-eslint": "^8.2.2",
    "conventional-changelog-angular-bitbucket": "^1.1.2",
    "conventional-changelog-cli": "^2.0.5",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "ora": "^3.0.0",
    "plop": "^2.0.0",
    "prettier": "^1.13.7"
  },
  "dependencies": {
    "react": "^16.6.0",
    "styled-components": "^4.0.2"
  }
}
